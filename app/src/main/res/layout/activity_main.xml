<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vape.val.liquid.MainActivity"
    android:background="@drawable/smoke_cloud"
    android:weightSum="1">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

             <Spinner
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
                android:visibility="gone"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/amount_to_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:gravity="left"
                android:text="@string/amount_to_make" />

            <EditText
                android:id="@+id/amount_to_make_int"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desired_strength"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="left"
                android:text="@string/desired_strength" />

            <EditText
                android:id="@+id/desired_strength_int"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="8" />



        </LinearLayout>


            <com.rey.material.widget.Slider
                android:id="@+id/slider_water_vodka_pga"
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:sl_primaryColor="@color/colorPrimary"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="0"
                android:layout_gravity="center_horizontal" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="left"
                android:text="@string/water_vodka_pga" />

            <TextView
                android:id="@+id/water_vodka_pga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="0 %" />

        </LinearLayout>

            <com.rey.material.widget.Slider
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desired_pg_slider"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="50"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/desired_pg" />

            <TextView
                android:id="@+id/desired_pg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="50 %" />

        </LinearLayout>



            <com.rey.material.widget.Slider
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desired_vg_slider"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="50"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desired_vg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="left"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20dp"
                android:text="@string/desired_vg" />

            <TextView
                android:id="@+id/desired_vg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="50 %" />

        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="@string/nicotine_strength" />

                <EditText
                    android:id="@+id/nicotine_strength_int"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="100" />

            </LinearLayout>


            <com.rey.material.widget.Slider
                android:id="@+id/pg_content_of_nicotine_slider"
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="100"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="@string/pg_content_of_nicotine" />

                <TextView
                    android:id="@+id/pg_content_of_nicotine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="100 %" />

            </LinearLayout>


            <com.rey.material.widget.Slider
                style="@style/Material.Widget.Slider.Discrete"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vg_content_of_nicotine_int"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="0"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="@string/vg_content_of_nicotine" />

                <TextView
                    android:id="@+id/vg_content_of_nicotine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0 %" />

            </LinearLayout>


            <com.rey.material.widget.Slider
                android:visibility="gone"
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_add_flavor_1"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="0"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/add_flavor_layout_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/name_add_flavor_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:hint="@string/flavor_1"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/count_add_flavor_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0 %" />


            </LinearLayout>

            <com.rey.material.widget.Slider
                android:visibility="gone"
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_add_flavor_2"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="0"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:id="@+id/add_flavor_layout_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/name_add_flavor_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:hint="@string/flavor_2"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/count_add_flavor_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0 %" />

            </LinearLayout>

            <com.rey.material.widget.Slider
                android:visibility="gone"
                style="@style/Material.Widget.Slider.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_add_flavor_3"
                app:sl_primaryColor="@color/colorPrimary"
                android:gravity="center"
                app:sl_minValue="0"
                app:sl_maxValue="100"
                app:sl_value="0"
                android:layout_gravity="center_horizontal" />


            <LinearLayout
                android:id="@+id/add_flavor_layout_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/name_add_flavor_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:hint="@string/flavor_3"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/count_add_flavor_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0 %" />

            </LinearLayout>





            <com.rey.material.widget.Button

                android:layout_marginTop="10dp"
                android:id="@+id/add_flavor"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="@string/add_flavor"
                app:rd_enable="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/press_button"/>


            <com.rey.material.widget.Button

                android:layout_marginTop="10dp"
                android:id="@+id/create"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="@string/create"
                app:rd_enable="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/press_button"/>

        </LinearLayout>




    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>




</LinearLayout>
